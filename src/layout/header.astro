---
import { Image } from "astro:assets";
import logoHorizontal from "@/assets/images/logo-horizontal.png";
import logoStacked from "@/assets/images/logo-stacked.png";
import NavigationMenu from "@/react-components/navigation/navigation-menu";
import { Button } from "@/components/react/ui/button";
---

<div
  class="sticky top-0 z-[999] flex h-16 justify-center bg-white px-2 py-2 shadow-lg min-[1125px]:h-20 min-[1125px]:px-8"
>
  <div
    class="flex w-full max-w-[1380px] flex-row-reverse items-center justify-end gap-4 min-[1125px]:flex-row min-[1125px]:justify-between"
  >
    <a
      class="absolute right-2 min-[1125px]:right-8 min-[1125px]:hidden"
      href="/contact-us/#contact"
    >
      <Button
        className="bg-[#9044E2] p-6 font-lilita text-lg uppercase hover:bg-[#F6BA33]"
      >
        Get in touch
      </Button>
    </a>
    <a href="/">
      <Image
        src={logoHorizontal}
        alt="Fizz Kids Logo"
        widths={[100, 300]}
        sizes="(min-width: 250px) 100, (min-width: 350px) 300"
        loading="eager"
        class="hidden h-12 w-fit min-[450px]:block min-[1125px]:hidden min-[1125px]:h-16 min-[1212px]:block"
      />
      <Image
        src={logoStacked}
        alt="Fizz Kids Logo"
        loading="eager"
        width={200}
        class="h-16 w-fit max-[1124px]:hidden min-[1212px]:hidden"
      />
    </a>
    <NavigationMenu client:load />
    <a class="hidden min-[1386px]:inline-flex" href="/contact-us/#contact">
      <Button
        className="bg-[#9044E2] p-6 font-lilita text-lg uppercase hover:bg-[#F6BA33]"
      >
        Get in touch
      </Button>
    </a>
  </div>
</div>
