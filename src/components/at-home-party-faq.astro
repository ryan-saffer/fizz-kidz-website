---
import { Image } from "astro:assets";
import faq from "@/assets/images/pages/parties/at-home-faq.png";
import FaqAccordion from "./react/faq-accordion";
---

<section class="my-12 md:my-24">
  <h6 class="mb-4 text-center font-lilita text-4xl md:text-5xl">
    Frequently Asked Questions
  </h6>
  <div class="flex w-full flex-col items-center gap-8 md:flex-row">
    <Image class="hidden w-2/5 md:block" src={faq} alt="Three girls smiling" />
    <div class="w-full md:w-3/5">
      <FaqAccordion
        client:idle
        items={[
          {
            question: "What do I need to provide?",
            answer: "A table and access to water - that's it!",
          },
          {
            question:
              "When should I let you know the number of kids that will attend?",
            answer: "10 days before your childs upcoming party!",
          },
          {
            question: "What happens if an extra child attends on the day?",
            answer: "No problem, we always pack a few extras!",
          },
          {
            question: "How does payment work?",
            answer:
              "We will only invoice you for the number of kids that actually make the creations (minimum payment for 12 children).",
          },
        ]}
      />
    </div>
  </div>
</section>
