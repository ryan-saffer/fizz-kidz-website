---
import FlipCreation from "../flip-creation.astro";

import creation from "@/assets/images/creations/sugar-lip-scrub.png";
type Props = {
  flippable?: boolean;
};

const { flippable = true } = Astro.props;
---

<FlipCreation
  flippable={flippable}
  image={creation}
  text={["Sugar Scrub Lip-Balm"]}
  color="blue"
/>
