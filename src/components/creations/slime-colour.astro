---
import FlipCreation from "../flip-creation.astro";

import creation from "@/assets/images/creations/slime-colour.png";
type Props = {
  flippable?: boolean;
};

const { flippable = true } = Astro.props;
---

<FlipCreation
  flippable={flippable}
  image={creation}
  text="Choose your colour"
  color="white"
/>
