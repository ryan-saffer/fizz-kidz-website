---
import FlipCreation from "../flip-creation.astro";

import creation from "@/assets/images/creations/sparkling-lip-balm.png";
type Props = {
  flippable?: boolean;
};

const { flippable = true } = Astro.props;
---

<!--Exact same as sparkling lip balm, just different text -->
<FlipCreation
  flippable={flippable}
  image={creation}
  text={["Fairy Lip Balm"]}
  color="purple"
/>
