---
import FlipCreation from "../flip-creation.astro";

import creation from "@/assets/images/creations/instant-snow-slime.png";
type Props = {
  flippable?: boolean;
};

const { flippable = true } = Astro.props;
---

<FlipCreation
  flippable={flippable}
  image={creation}
  text={["Instant Snow Slime"]}
  color="blue"
/>
