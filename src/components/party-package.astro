---
import { Image } from "astro:assets";

type Props = {
  color: string;
  image: ImageMetadata;
  imageAlt: string;
  title: string;
  path: string;
};

const { color, image, imageAlt, path, title } = Astro.props;
---

<style define:vars={{ color: color }}>
  .package:hover {
    border: 1px solid var(--color);
  }
</style>

<div
  class="package flex max-w-96 cursor-pointer flex-col items-center rounded-2xl border border-transparent p-4 hover:border-solid"
>
  <a href={path}>
    <Image src={image} alt={imageAlt} class="object-fit w-full" />
  </a>
  <a
    href={path}
    class="my-4 text-center font-lilita text-lg sm:text-2xl"
    style={{ color }}
  >
    {title}
  </a>
  <a
    href={path}
    class="font-gotham text-xs font-semibold uppercase sm:text-sm"
    style={{ color }}
  >
    Learn more
  </a>
</div>
