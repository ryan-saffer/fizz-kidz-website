---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import PrimaryButton from "@/components/primary-button.astro";

type Props = {
  subtitle: string;
  content: string;
  image: ImageMetadata;
  imageAlt: string;
  actionButtonText: string;
  actionButtonPath: string;
  color: string;
};

const {
  subtitle,
  content,
  image,
  imageAlt,
  actionButtonPath,
  actionButtonText,
  color,
} = Astro.props;
---

<style>
  /* h1 {
    font-family: "LilitaOne";
  } */
</style>

<div class="flex items-center flex-col min-[1400px]:flex-row gap-24">
  <div class="max-w-5xl min-[1400px]:w-1/2 mt-4 min-[1400px]:m-0">
    <h1 class="font-lilita sm:text-6xl text-5xl leading-none mb-4">
      <slot name="title" />
    </h1>
    <h2 class="font-lilita text-2xl sm:text-3xl mb-8" style={{ color }}>
      {subtitle}
    </h2>
    <p class="font-gotham mb-16 text-sm sm:text-base font-semibold">
      {content}
    </p>
    <PrimaryButton text={actionButtonText} path={actionButtonPath} />
  </div>
  <div class="hidden min-[1400px]:w-1/2 min-[1400px]:block">
    <Image
      src={image}
      alt={imageAlt}
      width={1200}
      loading="eager"
      class="rounded-3xl shadow-purple"
    />
  </div>
</div>
