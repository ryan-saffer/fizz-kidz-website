---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import PrimaryButton from "@/components/primary-button.astro";

type Props = {
  subtitle: string;
  image: ImageMetadata;
  imageAlt: string;
  actionButtonText: string;
  actionButtonPath: string;
  color: string;
};

const { subtitle, image, imageAlt, actionButtonPath, actionButtonText, color } =
  Astro.props;
---

<style>
  /* h1 {
    font-family: "LilitaOne";
  } */
</style>

<div class="flex flex-col items-center gap-24 min-[1400px]:flex-row">
  <div class="mt-4 max-w-5xl min-[1400px]:m-0 min-[1400px]:w-1/2">
    <h1 class="mb-4 font-lilita text-5xl leading-none sm:text-6xl">
      <slot name="title" />
    </h1>
    <h2 class="mb-8 font-lilita text-2xl sm:text-3xl" style={{ color }}>
      {subtitle}
    </h2>
    <p class="mb-16 font-gotham text-sm font-semibold sm:text-base">
      <slot name="content" />
    </p>
    <PrimaryButton text={actionButtonText} path={actionButtonPath} />
  </div>
  <div class="hidden min-[1400px]:block min-[1400px]:w-1/2">
    <Image
      src={image}
      alt={imageAlt}
      width={1200}
      loading="eager"
      class="rounded-3xl shadow-purple"
    />
  </div>
</div>
