---
import { cn } from "./react/lib/utils";
import { Button } from "./react/ui/button";

type Props = {
  text: string;
  path: string;
  className?: astroHTML.JSX.HTMLAttributes["class"];
};

const { text, path, className = "" } = Astro.props;
---

<Button
  className={cn(
    "h-fit text-wrap break-words rounded-full bg-[#F6BA33] p-0 text-lg font-semibold uppercase text-white shadow-[0px_0px_35px_0px_rgba(246,186,51,0.75)] transition-colors duration-300 ease-in-out hover:bg-[#9C59E4]",
    className,
  )}
>
  <a
    href={path}
    class="px-7 py-5"
    target={path.startsWith("http") ? "_blank" : "_self"}
  >
    {text}
  </a>
</Button>
