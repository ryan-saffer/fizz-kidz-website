---
import { Image } from "astro:assets";
import type { ClassValue } from "clsx";
import { cn } from "./react/lib/utils";

type Props = {
  image: ImageMetadata;
  imageAlt: string;
  eager?: boolean;
  className?: ClassValue;
};

const { image, imageAlt, eager = false, className } = Astro.props;
---

<div class={cn("flex w-fit flex-col rounded-lg shadow-md", className)}>
  <div>
    <Image
      loading={eager ? "eager" : "lazy"}
      src={image}
      alt={imageAlt}
      width={500}
      class="h-52 w-full rounded-t-lg object-cover"
    />
  </div>
  <!-- <div class="h-full p-8"> -->
  <slot name="content" />
  <!-- </div> -->
</div>
