---
// import "@/styles/globals.css";
import Layout from "@/layout/Layout.astro";
import PageIntro from "@/components/page-intro.astro";
import { Image } from "astro:assets";
import partyHero from "@/assets/images/pages/parties/party-hero.jpg";
import { BreadcrumbWrapper } from "@/react-components/breadcrumb-wrapper";
import StarBulletPoints from "@/components/star-bullet-points.astro";

import forwardArrow from "@/assets/images/pages/parties/forward-arrow.png";
import Step from "@/components/step.astro";
import PrimaryButton from "@/components/primary-button.astro";
import PartyPackage from "@/components/party-package.astro";

import glitzAndGlam from "@/assets/images/pages/parties/packages/glitz-and-glam.png";
import science from "@/assets/images/pages/parties/packages/science.png";
import slime from "@/assets/images/pages/parties/packages/slime.png";
import tieDye from "@/assets/images/pages/parties/packages/tie-dye.png";
import safari from "@/assets/images/pages/parties/packages/safari.png";
import swiftie from "@/assets/images/pages/parties/packages/swiftie.png";
import unicorn from "@/assets/images/pages/parties/packages/unicorn.png";
import mobile from "@/assets/images/pages/parties/packages/mobile.png";

import blueBubbles from "@/assets/images/pages/parties/blue-circles.png";
import partyPacks from "@/assets/images/pages/parties/party-packs.png";
import essendonStudio from "@/assets/images/pages/parties/essendon-studio.jpg";
import atHomeParties from "@/assets/images/pages/parties/at-home-parties.png";

const { default: greenClock } = await import(
  `@/assets/images/pages/parties/green-clock.svg?raw`
);
const { default: blueCalendar } = await import(
  `@/assets/images/pages/parties/blue-calendar.svg?raw`
);
const { default: purpleHat } = await import(
  `@/assets/images/pages/parties/purple-hat.svg?raw`
);

const { default: greenDrop } = await import(
  `@/assets/images/pages/parties/drop-green.svg?raw`
);
const { default: blueDrop } = await import(
  `@/assets/images/pages/parties/drop-blue.svg?raw`
);
const { default: purpleDrop } = await import(
  `@/assets/images/pages/parties/drop-purple.svg?raw`
);
---

<Layout
  title="Parties | Fizz Kidz"
  description="Fizz Kidz's Birthday Parties are the perfect and stress-free party for all boys and girls, aged 4 - 12, that your child and all their friends will love!"
>
  <main>
    <div class="m-auto block max-w-[1380px] px-5 pt-8">
      <BreadcrumbWrapper
        client:load
        items={[
          {
            type: "not-link",
            title: "In Studios",
          },
          {
            type: "dropdown",
            title: "Birthday Parties",
            path: "birthday-parties",
            items: [
              {
                type: "link",
                title: "Birthday Parties",
                path: "birthday-parties",
              },
              {
                type: "link",
                title: "Holiday Programs",
                path: "holiday-programs",
              },
            ],
          },
        ]}
      />
      <section class="mb-28 mt-8">
        <PageIntro
          subtitle="The magic of glitter colour and exploding fun!"
          image={partyHero}
          imageAlt="Party Hero"
          actionButtonPath="/"
          actionButtonText="Book a Party"
          color="purple"
        >
          <span slot="title">Fizz Kidz<br />Birthday Parties</span>
          <span slot="content"
            >Fizz Kidz' Kids Birthday Parties are the perfect and stress-free
            party for all boys and girls (aged 4 - 12) that your child and all
            their friends will love!</span
          >
        </PageIntro>
      </section>
      <section class="mt-16 md:mt-40">
        <div class="mb-20 flex flex-col items-center gap-4">
          <h3 class="text-center font-lilita text-3xl md:text-5xl">
            Birthday Party Themes
          </h3>
          <h4
            class="text-center font-lilita text-xl text-[#9044E2] md:text-2xl"
          >
            Our packages help create a personalised birthday party that your
            child will love.
          </h4>
          <p class="text-center font-gotham">
            Whether your child loves all things glitter and sparkles or is
            amazed by<br />science we have the perfect party for your child!
          </p>
        </div>
        <div
          class="mb-24 grid grid-cols-2 justify-center gap-4 sm:gap-8 min-[900px]:grid-cols-4"
        >
          <PartyPackage
            title="Glitz & Glam parties"
            color="#F24C9F"
            image={glitzAndGlam}
            imageAlt="hands with lip balm"
            path="parties/glitz-and-glam"
          />
          <PartyPackage
            title="Science parties"
            color="#43D4F3"
            image={science}
            imageAlt="bubbling volcano"
            path="parties/science"
          />
          <PartyPackage
            title="Slime parties"
            color="#9044E2"
            image={slime}
            imageAlt="girl holding slime and smiling"
            path="parties/slime"
          />
          <PartyPackage
            title="Tie Dye Parties"
            color="#F6BA33"
            image={tieDye}
            imageAlt="tie dye shoelaces"
            path="parties/slime"
          />
          <PartyPackage
            title="Safari Parties"
            color="#4EE16D"
            image={safari}
            imageAlt="a frog in a bath bomb"
            path="parties/slime"
          />
          <PartyPackage
            title="Swiftie Parties"
            color="#F24DA2"
            image={swiftie}
            imageAlt="Taylor Swift"
            path="parties/slime"
          />
          <PartyPackage
            title="Unicorn Parties"
            color="#43D4F3"
            image={unicorn}
            imageAlt="unicorn soap"
            path="parties/slime"
          />
          <PartyPackage
            title="At Home Parties"
            color="#F6BA33"
            image={mobile}
            imageAlt="A fizz kidz staff holding a box"
            path="parties/slime"
          />
        </div>
      </section>
      <section class="mt-16 md:mt-40">
        <h2 class="mb-12 text-center font-lilita text-4xl md:mb-28 md:text-5xl">
          How it works
        </h2>
        <div
          class="flex flex-col items-center justify-center gap-4 min-[1400px]:flex-row min-[1400px]:items-stretch"
        >
          <Step
            color="#4FE16D"
            number="1"
            icon={greenClock}
            iconAlt="green clock"
            background={greenDrop}
            backgroundPosition="-bottom-24 -left-12"
          >
            <span slot="title">Choose a<br />party length</span>
            <div slot="content">
              <h3 class="mb-2 font-lilita text-2xl">1.5 hour party</h3>
              <StarBulletPoints
                content={[
                  "Two creations",
                  "Exclusive venue",
                  "Two party hosts",
                ]}
                className="pl-4"
              />
              <h3 class="mb-2 mt-4 font-lilita text-2xl">2 hour party</h3>
              <StarBulletPoints
                content={[
                  "Three creations",
                  "Exclusive venue",
                  "Two party hosts",
                ]}
                className="pl-4"
              />
            </div>
          </Step>
          <Image
            src={forwardArrow}
            alt="forward arrow"
            class="h-16 w-fit self-center"
          />
          <Step
            color="#42D4F3"
            number="2"
            icon={blueCalendar}
            iconAlt="blue calendar"
            background={blueDrop}
            backgroundPosition="-bottom-24 -left-8"
          >
            <span slot="title">Choose your day,<br />time & venue</span>
            <div slot="content">
              <h3 class="mb-2 font-lilita text-2xl">Friday</h3>
              <StarBulletPoints
                content={["4:30pm or 6:30pm"]}
                className="pl-4"
              />
              <h3 class="mb-2 mt-4 font-lilita text-2xl">
                Saturdays and Sundays
              </h3>
              <StarBulletPoints
                content={["10am, 12pm, 2:30pm and 4:30pm"]}
                className="pl-4"
              />
              <h3 class="mb-2 mt-4 font-lilita text-2xl">Venue</h3>
              <StarBulletPoints
                content={["Balwyn, Cheltenham, Essendon and Malvern venues"]}
                className="pl-4"
              />
            </div>
          </Step>
          <Image
            src={forwardArrow}
            alt="forward arrow"
            class="h-16 w-fit self-center"
          />
          <Step
            color="#9044E2"
            number="3"
            icon={purpleHat}
            iconAlt="purple hat"
            background={purpleDrop}
            backgroundPosition="right-0 -bottom-24"
          >
            <span slot="title">Personalise</span>
            <div slot="content">
              <StarBulletPoints
                content={[
                  "Choose your favourite creations to make",
                  "Flexible & allergy aware party food",
                  "Party invitations included",
                  "You can bring your own birthday cake",
                  "Let us know the approx. number of children & which creations your child wants to make a week before the party",
                ]}
              />
            </div>
          </Step>
        </div>
      </section>
      <div class="my-24 text-center">
        <PrimaryButton text="Book a party" path="#test" />
      </div>

      <section class="flex flex-col gap-16 lg:flex-row lg:gap-8">
        <Image
          src={blueBubbles}
          alt="Three images, two of creations and one of a smiling child"
          class="w-full lg:w-1/2"
        />
        <div class="flex w-full flex-col justify-center gap-4 lg:w-1/2">
          <p class="text-center font-lilita text-4xl lg:text-start">
            Create your own birthday parties
          </p>
          <p
            class="text-center font-lilita text-2xl text-[#41D5F3] lg:text-start"
          >
            Does your child love a little bit of everything?
          </p>
          <p class="text-center font-gotham font-medium lg:text-start">
            Not to worry, you are not within a single package, but can mix and
            match the creations however you like!
          </p>
          <div
            class="mt-8 flex flex-wrap justify-center gap-x-12 gap-y-6 lg:justify-start"
          >
            <PrimaryButton text="Book a party" path="#contact" />
            <PrimaryButton
              text="View all the creations here"
              path="/creations"
            />
          </div>
        </div>
      </section>
      <section>
        <h6
          class="mb-12 mt-20 text-center font-lilita text-4xl md:mb-24 md:mt-32 md:text-5xl"
        >
          Birthday Party Pricing
        </h6>
        <div class="flex flex-col gap-4 lg:flex-row">
          <Step color="#9044E2">
            <p slot="title" class="text-4xl">1.5 hour party</p>
            <div slot="content">
              <p class="mb-6 font-lilita text-3xl text-[#9044E2]">
                $38 per child
              </p>
              <StarBulletPoints
                content={[
                  "Two fantastic Fizz Kidz Party hosts",
                  "Exclusive Fizz Kidz Studio",
                  "Each child makes two Fizz Kidz creations",
                  "Dancing and party games",
                  "Take home creation bags",
                  "Personalised online invitations [NEW!]",
                ]}
              />
              <p class="my-8 pl-12 italic">Minimum 12 children</p>
            </div>
          </Step>
          <Step color="#9044E2">
            <p slot="title" class="text-4xl">2 hour party</p>
            <div slot="content">
              <p class="mb-6 font-lilita text-3xl text-[#9044E2]">
                $49 per child
              </p>
              <StarBulletPoints
                content={[
                  "Two fantastic Fizz Kidz Party hosts",
                  "Exclusive Fizz Kidz Studio",
                  "Each child makes three Fizz Kidz creations",
                  "Dancing and party games",
                  "Take home creation bags",
                  "Personalised online invitations [NEW!]",
                ]}
              />
              <p class="my-8 pl-12 italic">Minimum 12 children</p>
            </div>
          </Step>
          <Step color="#9044E2">
            <p slot="title" class="text-4xl">Party food</p>
            <div slot="content">
              <p class="mb-6 font-lilita text-3xl text-[#9044E2]">
                $4 per child
              </p>
              <StarBulletPoints
                content={[
                  "Choose from a meat or vegetarian menu",
                  "Entire menu included for all children",
                  "Party plates and cups included",
                  "Fizz Kidz hosts serve party food",
                  "Sit back, watch and enjoy!",
                ]}
              />
              <p class="my-8 pl-12 italic">
                You are welcome to provide your own party food at no extra cost
                and our staff will serve it for you!
              </p>
            </div>
          </Step>
        </div>
        <div class="my-16 flex justify-center">
          <PrimaryButton text="View all the creations here" path="/creations" />
        </div>
      </section>
      <section class="relative mb-16">
        <div class="flex flex-col gap-8 lg:flex-row">
          <div class="relative flex-1">
            <div class="absolute -bottom-20 -right-12 z-0 hidden lg:block">
              <Fragment set:html={blueDrop} />
            </div>
            <div
              class="relative z-10 h-full w-full rounded-2xl bg-white p-8 shadow-around"
            >
              <p class="mb-8 font-lilita text-4xl text-[#42D4F3]">Inclusions</p>
              <p class="mb-4 font-lilita text-2xl">
                In-studio Birthday Parties include
              </p>
              <StarBulletPoints
                content={[
                  "Exclusive Venue",
                  "Two fabulous party hosts",
                  "The making of two or three AWESOME Fizz Kidz creations",
                  "Dancing games",
                  "Individual party bags (to take their creations home in - not lolly bags)",
                ]}
              />
            </div>
          </div>
          <div class="relative flex-1">
            <div class="absolute -bottom-20 -right-12 z-0 hidden lg:block">
              <Fragment set:html={blueDrop} />
            </div>
            <div
              class="relative z-10 h-full rounded-2xl bg-white p-8 shadow-around"
            >
              <p class="mb-8 font-lilita text-4xl text-[#42D4F3]">
                Party Structure
              </p>
              <p class="mb-4 font-lilita text-2xl">
                What would a 1.5 hour party look like?
              </p>
              <p class="mb-2 font-gotham font-medium">
                Arrive 10 minutes before the party starts to settle in, place
                your cake down and wait to meet and greet your friends!
              </p>
              <p class="mb-2 font-gotham font-medium">
                Spend the first hour making two selected creations and playing
                party games
              </p>
              <p class="mb-2 font-gotham font-medium">
                Second 30 minutes, our staff will serve the kids their party
                food and help you with cake celebrations
              </p>
              <p class="mb-2 font-gotham font-medium">
                Each child then takes home their creations in their individual
                Fizz Kidz party bag!
              </p>
              <p class="mb-2 font-gotham font-medium">
                Our 2 hour parties allow an extra 30 minutes to make an extra
                creation!
              </p>
            </div>
          </div>
          <div class="relative flex-1">
            <div
              class="relative z-10 h-full rounded-2xl bg-white p-8 shadow-around"
            >
              <p class="mb-8 font-lilita text-4xl text-[#42D4F3]">FAQ</p>
              <p class="mb-4 font-lilita text-2xl">
                Feel free to call us any time with questions
              </p>
              <StarBulletPoints
                content={[
                  "When do I choose creation options? We week before the party.",
                  "When do I let you know numbers? A week before the party.",
                  "Can I change the party food if I like? Yes we have options!",
                  "When do you take payment? At the end of the party.",
                  "Can we bring food for parents? Sure, just make sure it's nut free.",
                  "Can parents stay during the party? Sure, parents can stay or drop off.",
                  "Is there a maximum patron capacity? Yes, it is 35 in total (of adults and children combined) for all venues.",
                ]}
              />
            </div>
          </div>
        </div>
      </section>
      <section class="my-24 flex flex-col gap-16 lg:flex-row lg:gap-8">
        <Image
          src={partyPacks}
          alt="Fizz Kidz party packs"
          class="w-full lg:w-1/2"
        />
        <div class="flex w-full flex-col justify-center gap-4 lg:w-1/2">
          <p class="text-center font-lilita text-4xl lg:text-start">
            Fizz Kidz Party Packs
          </p>
          <p
            class="text-center font-lilita text-2xl text-[#41D5F3] lg:text-start"
          >
            We have your party gift packs ready!
          </p>
          <p class="text-center font-gotham font-medium lg:text-start">
            Looking for party take-home gifts for your guests? We have you
            covered! Fizz Kidz Activity Kits are super unique and packed with
            all the materials kids need to keep the creation making going after
            the party! Your guests will absolutely love you for this super
            awesome extra treat! Activity packs are $15 each and you can order
            them a week before your child's party.<br /><br />If a child is
            unwell, and can't attend, don't worry - we will only charge you for
            the kids that are there!
          </p>
          <div
            class="mt-8 flex flex-wrap justify-center gap-x-12 gap-y-6 lg:justify-start"
          >
            <PrimaryButton text="Book a party" path="#contact" />
          </div>
        </div>
      </section>
    </div>
    <section class="relative mt-12 h-[450px]">
      <div
        class="relative z-10 flex h-full flex-col items-center justify-center gap-6"
      >
        <p
          class="mx-8 max-w-[800px] text-center font-lilita text-4xl uppercase text-white sm:text-6xl"
        >
          Cheltenham, Balwyn, Essendon & Malvern studios
        </p>
        <PrimaryButton text="Book a party" path="#contact" />
      </div>
      <Image
        class="absolute top-0 z-0 h-full object-cover"
        src={essendonStudio}
        alt="background image of kids in a classroom"
      />
    </section>
    <div class="mx-auto block max-w-[1200px] px-5 py-8">
      <section class="my-12 flex flex-col gap-16 lg:flex-row lg:gap-8">
        <div class="flex w-full flex-col justify-center gap-4 lg:w-1/2">
          <p class="text-center font-lilita text-4xl lg:text-start">
            Fizz Kidz At Home Parties
          </p>
          <p
            class="text-center font-lilita text-2xl text-[#8DC54B] lg:text-start"
          >
            Sit back, relax and we will take care of everything!
          </p>
          <p class="text-center font-gotham font-medium lg:text-start">
            Our fabulous Fizz Kidz staff will come to your home or a party venue
            near you, and run a fantastic stress-free party that we know your
            child, and their friends will love!
          </p>
          <div
            class="mt-8 flex flex-wrap justify-center gap-x-12 gap-y-6 lg:justify-start"
          >
            <PrimaryButton text="Book a party" path="#contact" />
            <PrimaryButton
              text="At Home Party Details"
              path="/at-home-parties"
            />
          </div>
        </div>
        <Image
          src={atHomeParties}
          alt="Fizz Kidz running activities at someones home"
          class="object-fit w-full lg:w-[60%]"
        />
      </section>
    </div>
  </main>
</Layout>
