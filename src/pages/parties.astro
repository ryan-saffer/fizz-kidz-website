---
import "@/styles/globals.css";
import Layout from "@/layout/Layout.astro";
import PageIntro from "@/components/page-intro.astro";
import { Image } from "astro:assets";
import partyHero from "@/assets/images/party-hero.jpg";
import { BreadcrumbWrapper } from "@/react-components/breadcrumb-wrapper";
import StarBulletPoints from "@/components/star-bullet-points.astro";

import greenClock from "@/assets/images/green-clock.png";
import blueCalendar from "@/assets/images/blue-calendar.png";
import purpleHat from "@/assets/images/purple-hat.png";
import forwardArrow from "@/assets/images/forward-arrow.png";
import Step from "@/components/step.astro";
---

<Layout
  title="Parties | Fizz Kidz"
  description="Fizz Kidz's Birthday Parties are the perfect and stress-free party for all boys and girls, aged 4 - 12, that your child and all their friends will love!"
>
  <div class="max-w-[1380px] m-auto my-8 px-5">
    <BreadcrumbWrapper client:load />
    <section class="mb-28 mt-8">
      <PageIntro
        subtitle="The magic of glitter colour and exploding fun!"
        content="Fizz Kidz' Kids Birthday Parties are the perfect and stress-free party for all boys and girls (aged 4 - 12) that your child and all their friends will love!"
        image={partyHero}
        imageAlt="Party Hero"
        actionButtonPath="/"
        actionButtonText="Book a Party"
        color="#9044E2"
      >
        <span slot="title">Fizz Kidz<br />Birthday Parties</span>
      </PageIntro>
    </section>
    <section>
      <h2 class="text-center font-lilita text-5xl mb-12">How it works</h2>
      <div class="flex gap-4 justify-center items-stretch">
        <Step
          color="#4FE16D"
          number="1"
          icon={greenClock}
          iconAlt="green clock"
        >
          <span slot="title">Choose a<br />party length</span>
          <div slot="content">
            <h3 class="font-lilita text-2xl mb-2">1.5 hour party</h3>
            <StarBulletPoints
              content={["Two creations", "Exclusive venue", "Two party hosts"]}
            />
            <h3 class="font-lilita text-2xl mb-2 mt-4">2 hour party</h3>
            <StarBulletPoints
              content={[
                "Three creations",
                "Exclusive venue",
                "Two party hosts",
              ]}
            />
          </div>
        </Step>
        <Image
          src={forwardArrow}
          alt="forward arrow"
          class="h-16 w-fit self-center"
        />
        <Step
          color="#42D4F3"
          number="2"
          icon={blueCalendar}
          iconAlt="blue calendar"
        >
          <span slot="title">Choose your day,<br />time & venue</span>
          <div slot="content">
            <h3 class="font-lilita text-2xl mb-2">Friday</h3>
            <StarBulletPoints content={["4:30pm or 6:30pm"]} />
            <h3 class="font-lilita text-2xl mb-2 mt-4">
              Saturdays and Sundays
            </h3>
            <StarBulletPoints content={["10am, 12pm, 2:30pm and 4:30pm"]} />
            <h3 class="font-lilita text-2xl mb-2 mt-4">Venue</h3>
            <StarBulletPoints
              content={["Balwyn, Cheltenham, Essendon and Malvern venues"]}
            />
          </div>
        </Step>
        <Image
          src={forwardArrow}
          alt="forward arrow"
          class="h-16 w-fit self-center"
        />
        <Step color="#9044E2" number="3" icon={purpleHat} iconAlt="purple hat">
          <span slot="title">Personalise</span>
          <div slot="content">
            <StarBulletPoints
              content={[
                "Choose your favourite creations to make",
                "Flexible & allergy aware party food",
                "Party invitations included",
                "You can bring your own birthday cake",
                "Let us know the approx. number of children & which creations your child wants to make a week before the party",
              ]}
            />
          </div>
        </Step>
      </div>
    </section>
  </div>
</Layout>
