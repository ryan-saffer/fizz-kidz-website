---
import PageIntro from "@/components/page-intro.astro";
import { BreadcrumbWrapper } from "@/components/react/breadcrumb-wrapper";
import Layout from "@/layout/Layout.astro";
import malvern from "@/assets/images/pages/locations/malvern.jpg";
import birthday from "@/assets/images/pages/locations/kingsville/birthday.jpg";
import holidayPrograms from "@/assets/images/pages/locations/kingsville/holiday-programs.jpg";
import contact from "@/assets/images/pages/locations/kingsville/contact.jpg";
import slime from "@/assets/images/pages/locations/kingsville/slime.jpg";
import { getImage, Image } from "astro:assets";
import CardWithImage from "@/components/card-with-image.astro";
import ImageCarousel from "@/components/react/image-carousel";
import Smocks from "@/assets/images/pages/parties/creations/hero.jpg";
import Reviews from "@/components/reviews.astro";
import blueWave from "@/assets/images/pages/locations/blue-wave.svg";
import Values from "@/components/values.astro";
import FaqAccordion from "@/components/react/faq-accordion";
import faq from "@/assets/images/pages/parties/faq.png";

const carouselImage = await getImage({ src: Smocks, format: "webp" });
---

<Layout
  title="Malvern | Fizz Kidz"
  description="Malvern birthday parties, holiday programs, toddler programs and more!"
>
  <div class="m-auto block max-w-[1380px] px-5 pt-4">
    <BreadcrumbWrapper
      client:idle
      items={[
        {
          type: "link",
          title: "Locations",
          path: "/locations",
        },
        {
          type: "dropdown",
          title: "Malvern",
          items: [
            {
              type: "link",
              path: "/locations/balwyn",
              title: "Balwyn",
            },
            {
              type: "link",
              path: "/locations/cheltenham",
              title: "Cheltenham",
            },
            {
              type: "link",
              path: "/locations/essendon",
              title: "Essendon",
            },
            {
              type: "link",
              path: "/locations/kingsville",
              title: "Kingsville",
            },
            {
              type: "link",
              path: "/locations/malvern",
              title: "Malvern",
            },
          ],
        },
      ]}
    />
    <PageIntro
      image={malvern}
      imageAlt="A picture of the malvern studio"
      subtitle="The Ultimate Kids' Destination of Fun"
      color="purple"
      actionButtonPath="/contact-us"
      actionButtonText="Get in touch"
    >
      <span slot="title">Fizz Kidz Malvern Studio</span>
      <span slot="content"
        >Filled with colour, laughter and fun, Fizz Kidz Malvern brings joy to
        every child who enters!
      </span>
    </PageIntro>
    <p class="mt-36 text-center font-lilita text-5xl">
      Creativity & fun in the heart of Malvern!
    </p>
    <section
      class="my-12 flex flex-col-reverse gap-8 md:pb-12 md:pt-16 lg:flex-row"
    >
      <div class="px-0 sm:px-12 lg:w-1/2">
        <Image
          class="rounded-2xl object-contain shadow-green-sm sm:shadow-green-md"
          src={slime}
          alt="Two Fizz Kids staff standing under an archway"
        />
      </div>
      <div class="flex flex-col justify-center lg:w-1/2">
        <p class="font-bold">Fizz Kidz Malvern Studio</p>
        <p>20 Glenferrie Road, Malvern VIC 3144</p>
        <p class="mt-4 font-bold">Phone</p>
        <p><a href="tel:0390598144">(03) 9059 8144</a></p>
        <p class="mt-4 font-bold">Email</p>
        <p>
          <a href="mailto:bookings@fizzkidz.com.au">bookings@fizzkidz.com.au</a>
        </p>
        <p class="mt-4 font-bold">About Fizz Kidz Malvern</p>
        <p>
          Our stunning Malvern studio is colourful and bright with lots of
          natural light streaming through.
          <ul class="mb-4 list-disc pl-4">
            <li>
              Located conveniently on Glenferrie Road, there;s lots of cafes and
              shops nearby!
            </li>
            <li>Accommodate up to 28 children at birthday parties</li>
            <li>
              Cafe for parents:
              <ul class="mb-4 list-[circle] pl-6">
                <li>
                  Green Goose is conveniently located right around the corner.
                  Parents are welcome to grab a coffee, or arrange a tab for
                  parents.
                </li>
              </ul>
            </li>
          </ul>
        </p>
      </div>
    </section>
    <section class="mb-12 md:mb-20">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3149.8249111086625!2d145.02563537759087!3d-37.86438703693589!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad66a1e274963f7%3A0x1a05f7f5a3893474!2sFizz%20Kidz%20(Malvern)!5e0!3m2!1sen!2sau!4v1742119922446!5m2!1sen!2sau"
        width="100%"
        height="450"
        style="border:0;border-radius:12px"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"></iframe>
    </section>
    <section class="grid grid-cols-1 gap-8 md:grid-cols-3">
      <a href="/birthday-parties">
        <CardWithImage
          className="group h-full w-full cursor-pointer"
          image={birthday}
          imageAlt="Kids holding slime"
        >
          <div
            slot="content"
            class="p-8 group-hover:cursor-pointer group-hover:bg-gray-50"
          >
            <p class="mb-4 font-lilita text-2xl text-[#9044E2]">
              Birthday Parties
            </p>
            <p class="font-gotham text-lg">
              Host a memorable, action-packed birthday at Fizz Kidz Malvern,
              where kids make and take home their very own awesome creations!
            </p>
          </div>
        </CardWithImage>
      </a>
      <a href="/holiday-programs">
        <CardWithImage
          className="group h-full w-full cursor-pointer"
          image={holidayPrograms}
          imageAlt="Kids holding slime"
        >
          <div slot="content" class="p-8 group-hover:bg-gray-50">
            <p class="mb-4 font-lilita text-2xl text-[#9044E2]">
              Holiday Programs
            </p>
            <p class="font-gotham text-lg">
              Keep your kids entertained during the holidays with Fizz Kidz
              Malvern programs, as we run amazing hands-on activities and
              creative projects that bring loads of fun!
            </p>
          </div>
        </CardWithImage>
      </a>
      <a href="/contact-us">
        <CardWithImage
          className="group h-full w-full cursor-pointer"
          image={contact}
          imageAlt="Kids holding slime"
        >
          <div slot="content" class="p-8 group-hover:bg-gray-50">
            <p class="mb-4 font-lilita text-2xl text-[#9044E2]">Contact Us</p>
            <p class="font-gotham text-lg">
              Have questions or would like to chat? Get in touch with our
              Malvern team, we would love to help!
            </p>
          </div>
        </CardWithImage>
      </a>
    </section>
    <section class="mt-24">
      <p class="text-center font-lilita text-3xl">Malvern Studio Gallery</p>
      <ImageCarousel
        client:idle
        loop
        images={[
          { image: carouselImage, alt: "Alt" },
          { image: carouselImage, alt: "Alt" },
          { image: carouselImage, alt: "Alt" },
          { image: carouselImage, alt: "Alt" },
          { image: carouselImage, alt: "Alt" },
          { image: carouselImage, alt: "Alt" },
          { image: carouselImage, alt: "Alt" },
          { image: carouselImage, alt: "Alt" },
        ]}
      />
    </section>
    <section>
      <Reviews
        title="Hear what our parents have to say!"
        reviews={[
          {
            review:
              "So impressed with Fizz Kids, my daughter absolutely loved her birthday party and the staff at Fizz Kids made her day so fun and special. The activities provided are great, the kids loved the tie dye pillowcase covers, and it was such a hassle free process the whole way through. Will definitely be booking my next kidâ€™s birthday party with them!",
            writtenBy: "Claire",
            writtenYear: "February 2025",
          },
          {
            review:
              "We recently hosted our daughter's 3rd and 5th birthdays at Fizz Kidz Malvern. There were 24 kids and they had the most amazing time. The Fizz Kidz team were so lovely, kind and full of exciting birthday energy! For the parent and myself it was a treat to either kiss and go or watch from a far as the kids enjoyed themselves ðŸ˜Š",
            writtenBy: "Hayley",
            writtenYear: "December 2024",
          },
          {
            review:
              "We had a wonderful birthday party for our 6 year old yesterday. Everything was so well organized and easy. The two lovely hosts were so great with the kids, funny and engaging- everyone had a great time! Thanks again for such an easy afternoon.",
            writtenBy: "Selena",
            writtenYear: "December 2024",
          },
          {
            review:
              "We had an amazing time at the party! My daughter and her friends had a blast. After the birthday party, all the parents told me their kids had so much fun. The instructors were super professional and friendly, making us feel welcome as soon as we walked in. The program was also very well organized. I highly recommend this place!",
            writtenBy: "Ej",
            writtenYear: "December 2024",
          },
        ]}
      />
    </section>
  </div>
  <Image
    src={blueWave}
    alt="blue background wave"
    class="left-0 right-0 w-screen"
  />
  <div class="bg-[#43D4F3]">
    <div class="m-auto block max-w-[1380px] px-5 pt-4">
      <p class="h2 text-lg font-bold">
        THE ULTIMATE KIDS PARTY AND HOLIDAY PROGRAM VENUE IN MALVERN, MELBOURNE
        VIC
      </p>
      <p class="h2 mt-2">
        Welcome to Fizz Kidz - Malvern's Most Creative Kids Party & Activity
        Venue
      </p>
      <p class="mt-2">
        Located in the heart of <strong>Malvern, Melbourne VIC</strong>, Fizz
        Kidz is the go-to destination for
        <strong
          >fun, hands-on kids' parties and exciting school holiday programs.
        </strong> Our bright and energetic studio is designed to <strong
          >spark creativity and deliver unforgettable experiences,</strong
        > making every visit full of <strong>
          laughter, learning, and interactive fun.
        </strong>
      </p>
      <p class="h2 mt-4 text-lg font-bold">
        Unforgettable Kids' Birthday Parties at Fizz Kidz Malvern
      </p>
      <p>
        Looking for the <strong>best kids' party venue in Malvern?</strong> Fizz
        Kidz specializes in <strong>creative birthday parties</strong>, where
        kids can <strong
          >make slime, mix bath bombs, design tie-dye creations, and more!</strong
        > Our <strong>high-energy party hosts</strong> ensure a seamless and engaging
        experience, with plenty of fun activities, party games, and take-home creations
        for every child.
      </p>
      <p class="h2 mt-4 text-lg font-bold">
        Your Go-To School Holiday Program in Malvern
      </p>
      <p>
        Fizz Kidz <strong>holiday programs</strong> keep kids entertained with hands-on,
        themed activities like <strong
          >science experiments, arts and crafts, and sensory</strong
        > play. Perfect for keeping kids engaged, inspired, and having fun during
        the school break!
      </p>
      <p class="h2 mt-4 text-lg font-bold">
        A Fun-Filled Venue for Kids' Activities in Malvern
      </p>
      <p>
        Beyond birthday parties and holiday programs, our Malvern studio is the
        perfect place for <strong
          >kids' workshops, incursions, and special events.</strong
        >
        Whether you're looking for a <strong
          >stress-free party experience</strong
        > or a creative activity to keep little hands busy, Fizz Kidz has something
        for everyone.
      </p><p class="h2 mt-4 text-lg font-bold">
        Join the Fun at Fizz Kidz Malvern!
      </p>
      <p>
        We invite you to <strong>discover the magic of Fizz Kidz</strong> â€” where
        kids can explore, create, and celebrate in a vibrant, hands-on environment.
        Whether you're planning a <strong
          >birthday party, school holiday activity, or special event,</strong
        >
        we're here to make it <strong
          >exciting, fun, and completely hassle-free.</strong
        >
      </p>
      <p class="h2 mt-4 text-lg font-bold">Contact Us</p>
      <p>
        Visit <strong>Fizz Kidz Malvern, Melbourne VIC,</strong> or get in touch
        to book your next <strong>party, workshop, or holiday program.</strong> Let's
        create something amazing together!
      </p>
    </div>
  </div>
  <Image
    src={blueWave}
    alt="blue background wave"
    class="left-0 right-0 w-screen rotate-180"
  />
  <div class="m-auto block max-w-[1380px] px-5 pt-4">
    <section class="md:my-18 my-12">
      <h6 class="mb-4 text-center font-lilita text-4xl md:text-5xl">
        Frequently Asked Questions
      </h6>
      <div class="flex w-full flex-col items-center gap-8 md:flex-row">
        <Image
          class="hidden w-2/5 md:block"
          src={faq}
          alt="Three girls smiling"
        />
        <div class="w-full md:w-3/5">
          <FaqAccordion
            client:idle
            items={[
              {
                question: "When do I choose my creations?",
                answer: "10 days before your childs upcoming party!",
              },
              {
                question: "When do I let you know numbers?",
                answer:
                  "10 days before your childs upcoming party. We will only charge you for the number of kids that turn up!",
              },
              {
                question: "Can I change the party food if I like?",
                answer: "Yes we have options!",
              },
              {
                question: "When do you take payment?",
                answer: "At the end of the party. We do not take any deposit.",
              },
              {
                question: "Can we bring food for parents?",
                answer:
                  "Sure, please make sure it's nut free and let us know before the party.",
              },
              {
                question: "Can parents stay during the party?",
                answer: "Sure, parents can stay or drop off.",
              },
            ]}
          />
        </div>
      </div>
    </section>
    <Values />
  </div>
</Layout>
