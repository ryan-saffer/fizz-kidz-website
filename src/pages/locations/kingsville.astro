---
import PageIntro from "@/components/page-intro.astro";
import { BreadcrumbWrapper } from "@/components/react/breadcrumb-wrapper";
import Layout from "@/layout/Layout.astro";
import kingsville from "@/assets/images/pages/locations/kingsville.png";
import birthday from "@/assets/images/pages/locations/kingsville/birthday.jpg";
import holidayPrograms from "@/assets/images/pages/locations/kingsville/holiday-programs.jpg";
import contact from "@/assets/images/pages/locations/kingsville/contact.jpg";
import slime from "@/assets/images/pages/locations/kingsville/slime.jpg";
import { getImage, Image } from "astro:assets";
import CardWithImage from "@/components/card-with-image.astro";
import ImageCarousel from "@/components/react/image-carousel";
import Smocks from "@/assets/images/pages/parties/creations/hero.jpg";
import Reviews from "@/components/reviews.astro";
import blueWave from "@/assets/images/pages/locations/blue-wave.svg";
import Values from "@/components/values.astro";
import FaqAccordion from "@/components/react/faq-accordion";
import faq from "@/assets/images/pages/parties/faq.png";

const carouselImage = await getImage({ src: Smocks, format: "webp" });
---

<Layout
  title="Kingsville | Fizz Kidz"
  description="Kingsville birthday parties, holiday programs, toddler programs and more!"
>
  <div class="m-auto block max-w-[1380px] px-5 pt-4">
    <BreadcrumbWrapper
      client:idle
      items={[
        {
          type: "link",
          title: "Locations",
          path: "/locations",
        },
        {
          type: "dropdown",
          title: "Kingsville",
          items: [
            {
              type: "link",
              path: "/locations/cheltenham",
              title: "Cheltenham",
            },
            {
              type: "link",
              path: "/locations/balwyn",
              title: "Balwyn",
            },
            {
              type: "link",
              path: "/locations/essendon",
              title: "Essendon",
            },
            {
              type: "link",
              path: "/locations/kingsville",
              title: "Kingsville",
            },
            {
              type: "link",
              path: "/locations/malvern",
              title: "Malvern",
            },
          ],
        },
      ]}
    />
    <PageIntro
      image={kingsville}
      imageAlt="A picture of the kingsville studio"
      subtitle="The Ultimate Kids' Destination of Fun"
      color="purple"
      actionButtonPath="/contact-us"
      actionButtonText="Get in touch"
    >
      <span slot="title">Fizz Kidz Kingsville Studio</span>
      <span slot="content"
        >Our Essendon studio is a vibrant, hands-on, light filled space where
        kids unleash their creativity!
      </span>
    </PageIntro>
    <p class="mt-36 text-center font-lilita text-5xl">
      Creativity & fun in the heart of Kingsville!
    </p>
    <section
      class="my-12 flex flex-col-reverse gap-8 md:pb-12 md:pt-16 lg:flex-row"
    >
      <div class="px-0 sm:px-12 lg:w-1/2">
        <Image
          class="rounded-2xl object-contain shadow-green-sm sm:shadow-green-md"
          src={slime}
          alt="Two Fizz Kids staff standing under an archway"
        />
      </div>
      <div class="flex flex-col justify-center lg:w-1/2">
        <p class="font-bold">Fizz Kidz Kingsville Studio</p>
        <p>238 Somerville Rd, Kingsville, VIC 3012</p>
        <p class="mt-4 font-bold">Phone</p>
        <p><a href="tel:0390598144">(03) 9059 8144</a></p>
        <p class="mt-4 font-bold">Email</p>
        <p>
          <a href="mailto:bookings@fizzkidz.com.au">bookings@fizzkidz.com.au</a>
        </p>
        <p class="mt-4 font-bold">About Fizz Kidz Kingsville</p>
        <p>
          Our stunning Essendon studio is big, colourful and bright with lots of
          natural light.
          <ul class="mb-4 list-disc pl-4">
            <li>Amble four hour parking right outside</li>
            <li>Located next door to PEGS Junior College</li>
            <li>Accommodate up to 30 children at birthday parties</li>
            <li>
              Cafe for parents:
              <ul class="mb-4 list-[circle] pl-6">
                <li>
                  Pizza By D'Asporto is conveniently located right next door.
                  Parents are welcome to grab a coffee, or even a pizza!
                </li>
                <li>
                  Assembly Groud is another great cafe, located two minutes walk
                  down Napier street.
                </li>
              </ul>
            </li>
          </ul>
        </p>
      </div>
    </section>
    <section class="grid grid-cols-1 gap-8 md:grid-cols-3">
      <a href="/birthday-parties">
        <CardWithImage
          className="group h-full w-full cursor-pointer"
          image={birthday}
          imageAlt="Kids holding slime"
        >
          <div
            slot="content"
            class="p-8 group-hover:cursor-pointer group-hover:bg-gray-50"
          >
            <p class="mb-4 font-lilita text-2xl text-[#9044E2]">
              Birthday Parties
            </p>
            <p class="font-gotham text-lg">
              Celebrate with a fun-filled, hands-on party at Fizz Kidz Essendon,
              where kids create and take home amazing creations!
            </p>
          </div>
        </CardWithImage>
      </a>
      <a href="/holiday-programs">
        <CardWithImage
          className="group h-full w-full cursor-pointer"
          image={holidayPrograms}
          imageAlt="Kids holding slime"
        >
          <div slot="content" class="p-8 group-hover:bg-gray-50">
            <p class="mb-4 font-lilita text-2xl text-[#9044E2]">
              Holiday Programs
            </p>
            <p class="font-gotham text-lg">
              Our Essendon holiday programs keep kids engaged with exciting
              activities, creative projects, and plenty of fun!
            </p>
          </div>
        </CardWithImage>
      </a>
      <a href="/contact-us">
        <CardWithImage
          className="group h-full w-full cursor-pointer"
          image={contact}
          imageAlt="Kids holding slime"
        >
          <div slot="content" class="p-8 group-hover:bg-gray-50">
            <p class="mb-4 font-lilita text-2xl text-[#9044E2]">Contact Us</p>
            <p class="font-gotham text-lg">
              Have questions or would like to chat? Get in touch with our
              Essendon team, we would love to help!
            </p>
          </div>
        </CardWithImage>
      </a>
    </section>
    <section class="mt-24">
      <p class="text-center font-lilita text-3xl">Kingsville Studio Gallery</p>
      <ImageCarousel
        client:idle
        loop
        images={[
          { image: carouselImage, alt: "Alt" },
          { image: carouselImage, alt: "Alt" },
          { image: carouselImage, alt: "Alt" },
          { image: carouselImage, alt: "Alt" },
          { image: carouselImage, alt: "Alt" },
          { image: carouselImage, alt: "Alt" },
          { image: carouselImage, alt: "Alt" },
          { image: carouselImage, alt: "Alt" },
        ]}
      />
    </section>
    <section>
      <Reviews
        title="Hear what our parents have to say!"
        reviews={[
          { review: "A review", writtenBy: "Ryan", writtenYear: "2024" },
          {
            review:
              "This was our first time collaborating with Fizz Kids for an activity at CS Square shopping centre. We were very happy from the start of our inquiry to the end of the activity. The team were prompt with their communication and Customer facing was very professional yet fun. We will definitely be looking at more activations from them in the future!",
            writtenBy: "Patric, SC Square",
            writtenYear: "2024",
          },
          { review: "A review", writtenBy: "Ryan", writtenYear: "2024" },
          {
            review:
              "This was our first time collaborating with Fizz Kids for an activity at CS Square shopping centre. We were very happy from the start of our inquiry to the end of the activity. The team were prompt with their communication and Customer facing was very professional yet fun. We will definitely be looking at more activations from them in the future!",
            writtenBy: "Patric, SC Square",
            writtenYear: "2024",
          },
          { review: "A review", writtenBy: "Ryan", writtenYear: "2024" },
          {
            review:
              "This was our first time collaborating with Fizz Kids for an activity at CS Square shopping centre. We were very happy from the start of our inquiry to the end of the activity. The team were prompt with their communication and Customer facing was very professional yet fun. We will definitely be looking at more activations from them in the future!",
            writtenBy: "Patric, SC Square",
            writtenYear: "2024",
          },
        ]}
      />
    </section>
  </div>
  <Image
    src={blueWave}
    alt="blue background wave"
    class="left-0 right-0 w-screen"
  />
  <div class="bg-[#43D4F3]">
    <div class="m-auto block max-w-[1380px] px-5 pt-4">
      <p class="h2 text-lg font-bold">
        THE ULTIMATE KIDS PARTY AND HOLIDAY PROGRAM VENUE IN ESSENDON, MELBOURNE
        VIC
      </p>
      <p class="h2 mt-2">
        Welcome to Fizz Kidz - Essendon's Most Creative Kids Party & Activity
        Venue
      </p>
      <p class="mt-2">
        Located in the heart of <strong>Essendon, Melbourne VIC</strong>, Fizz
        Kidz is the go-to destination for
        <strong
          >fun, hands-on kids' parties and exciting school holiday programs.
        </strong> Our vibrant studio is designed to spark creativity and deliver
        unforgettable experiences, making every visit full of <strong>
          laughter, learning, and interactive fun.
        </strong>
      </p>
      <p class="h2 mt-4 text-lg font-bold">
        Unforgettable Kids' Birthday Parties at Fizz Kidz Essendon
      </p>
      <p>
        Looking for the <strong>best kids' party venue in Essendon?</strong> Fizz
        Kidz specializes in <strong>creative birthday parties</strong>, where
        kids can <strong
          >make slime, mix bath bombs, design tie-dye creations, and more!</strong
        > Our <strong>high-energy party hosts</strong> ensure a seamless and engaging
        experience, with plenty of fun activities, party games, and take-home creations
        for every child.
      </p>
      <p class="h2 mt-4 text-lg font-bold">
        Your Go-To School Holiday Program in Essendon
      </p>
      <p>
        Fizz Kidz <strong>holiday programs</strong> keep kids entertained with hands-on,
        themed activities like <strong
          >science experiments, arts and crafts, and sensory</strong
        > play. Perfect for keeping kids engaged, inspired, and having fun during
        the school break!
      </p>
      <p class="h2 mt-4 text-lg font-bold">
        A Fun-Filled Venue for Kids' Activities in Essendon
      </p>
      <p>
        Beyond birthday parties and holiday programs, our Essendon studio is the
        perfect place for <strong
          >kids' workshops, incursions, and special events.</strong
        >
        Whether you're looking for a <strong
          >stress-free party experience</strong
        > or a creative activity to keep little hands busy, Fizz Kidz has something
        for everyone.
      </p><p class="h2 mt-4 text-lg font-bold">
        Join the Fun at Fizz Kidz Essendon!
      </p>
      <p>
        We invite you to <strong>discover the magic of Fizz Kidz</strong> — where
        kids can explore, create, and celebrate in a vibrant, hands-on environment.
        Whether you're planning a <strong
          >birthday party, school holiday activity, or special event,</strong
        >
        we're here to make it <strong
          >exciting, fun, and completely hassle-free.</strong
        >
      </p>
      <p class="h2 mt-4 text-lg font-bold">Contact Us</p>
      <p>
        Visit <strong>Fizz Kidz Essendon, Melbourne VIC,</strong> or get in touch
        to book your next <strong>party, workshop, or holiday program.</strong> Let's
        create something amazing together!
      </p>
    </div>
  </div>
  <Image
    src={blueWave}
    alt="blue background wave"
    class="left-0 right-0 w-screen rotate-180"
  />
  <div class="m-auto block max-w-[1380px] px-5 pt-4">
    <section class="md:my-18 my-12">
      <h6 class="mb-4 text-center font-lilita text-4xl md:text-5xl">
        Frequently Asked Questions
      </h6>
      <div class="flex w-full flex-col items-center gap-8 md:flex-row">
        <Image
          class="hidden w-2/5 md:block"
          src={faq}
          alt="Three girls smiling"
        />
        <div class="w-full md:w-3/5">
          <FaqAccordion
            client:idle
            items={[
              {
                question: "When do I choose my creations?",
                answer: "10 days before your childs upcoming party!",
              },
              {
                question: "When do I let you know numbers?",
                answer:
                  "10 days before your childs upcoming party. We will only charge you for the number of kids that turn up!",
              },
              {
                question: "Can I change the party food if I like?",
                answer: "Yes we have options!",
              },
              {
                question: "When do you take payment?",
                answer: "At the end of the party. We do not take any deposit.",
              },
              {
                question: "Can we bring food for parents?",
                answer:
                  "Sure, please make sure it's nut free and let us know before the party.",
              },
              {
                question: "Can parents stay during the party?",
                answer: "Sure, parents can stay or drop off.",
              },
            ]}
          />
        </div>
      </div>
    </section>
    <Values />
  </div>
</Layout>
