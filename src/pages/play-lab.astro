---
import { getImage, Image } from "astro:assets";
import PageIntro from "@/components/page-intro.astro";
import { BreadcrumbWrapper } from "@/components/react/breadcrumb-wrapper";
import Layout from "@/layout/Layout.astro";
import purpleWave from "@/assets/images/pages/play-lab/purple-wave.svg";
import graphics from "@/assets/images/pages/play-lab/graphics.png";
import swing from "@/assets/images/pages/play-lab/swing.jpg";
import littleExplorers from "@/assets/images/pages/play-lab/little-explorers.jpg";
import littleExplorersBanner from "@/assets/images/pages/play-lab/little-explorers-banner.jpg";
import creativeKinders from "@/assets/images/pages/play-lab/creative-kinders.jpg";
import creativeKindersBanner from "@/assets/images/pages/play-lab/creative-kinders-banner.jpg";
import allPlays from "@/assets/images/pages/play-lab/all-plays.jpg";
import allPlaysBanner from "@/assets/images/pages/play-lab/all-plays-banner.jpg";
import FaqAccordion from "@/components/react/faq-accordion";
import faq from "@/assets/images/pages/parties/faq.png";
import Values from "@/components/values.astro";
import PlayLabProgramsSection from "@/react-components/play-lab/play-lab-programs-section";
import PlayLabDaySchedule from "@/components/play-lab-day-schedule.astro";
import Reviews from "@/components/reviews.astro";
import headerVideo from "@/assets/images/pages/play-lab/play-lab-header.mp4";
import PrimaryButton from "@/components/primary-button.astro";

const littleExplorersOptimised = await getImage({
  src: littleExplorers,
  format: "webp",
});
const littleExplorersBannerOptimised = await getImage({
  src: littleExplorersBanner,
  format: "webp",
});
const creativeKindersOptimised = await getImage({
  src: creativeKinders,
  format: "webp",
});
const creativeKindersBannerOptimised = await getImage({
  src: creativeKindersBanner,
  format: "webp",
});
const allPlaysOptimised = await getImage({
  src: allPlays,
  format: "webp",
});
const allPlaysBannerOptimised = await getImage({
  src: allPlaysBanner,
  format: "webp",
});
---

<Layout
  title="Browse and book programs and activites for toddlers aged 18 months to 5 years. | Fizz Kidz"
  description="Sparking creativity and curiosity with fun, hands-on science, art, and craft experiences for kids aged 18 months to 5 years!"
>
  <div
    class="flex flex-col items-center justify-center gap-1 bg-[#FFDC5D] p-4 text-center font-lilita"
  >
    <p class="text-lg md:text-4xl">Only available at Fizz Kidz Kingsville</p>
    <p class="text-sm md:text-xl">Launching in all studios soon!</p>
  </div>
  <section class="m-auto mb-8 block max-w-[1380px] px-5 pt-4 sm:mb-0">
    <div class="h-[10px]"></div>
    <BreadcrumbWrapper
      items={[{ type: "link", title: "Play Lab", path: "/play-lab/" }]}
    />
    <PageIntro
      color="blue"
      type="video"
      videoUrl={headerVideo}
      subtitle="Weekly immersive programs for kids aged 18 months to 5 years that your kids will love!"
      actionButtonText="Book today"
      actionButtonPath="https://bookings.fizzkidz.com.au/play-lab-booking"
    >
      <span slot="title">Play Lab at Fizz Kidz</span>
      <span slot="content">
        Spark creativity and wonder with art projects, science experiments and
        tactile developmental opportunities in every session!
      </span>
    </PageIntro>
    <p class="mb-12 mt-24 text-center font-lilita text-6xl">
      Fizz Kidz Play Lab Programs
    </p>
    <PlayLabProgramsSection
      client:load
      littleExplorersImage={{
        image: littleExplorersOptimised,
        alt: "Two kids in smocks laughing",
      }}
      littleExplorersBanner={{
        image: littleExplorersBannerOptimised,
        alt: "a banner image",
      }}
      creativeKindersImage={{
        image: creativeKindersOptimised,
        alt: "A cardboard car covered in paint",
      }}
      creativeKindersBanner={{
        image: creativeKindersBannerOptimised,
        alt: "a banner image",
      }}
      allPlaysImage={{
        image: allPlaysOptimised,
        alt: "A girl amazed as she plays with paint",
      }}
      allPlaysBanner={{
        image: allPlaysBannerOptimised,
        alt: "a banner image",
      }}
    />
    <section>
      <h6 class="mb-4 text-center font-lilita text-4xl md:text-5xl">
        Timetable - Term 2
      </h6>
      <p class="mb-8 text-center font-gotham sm:text-xl">
        Learning grows week by week over the term, guided by past adventures.<br
        />Register for the term or book a casual session.
      </p>
      <div class="grid grid-cols-1 lg:grid-cols-5">
        <PlayLabDaySchedule position={1} day="Monday" programs={[]} />
        <PlayLabDaySchedule position={2} day="Tuesday" programs={[]} />
        <PlayLabDaySchedule
          position={3}
          day="Wednesday"
          programs={[
            {
              title: "All Playz",
              ages: "Ages 1.5 - 5 years",
              time: "9:30 AM - 10:30 AM",
              color: "#9044E2",
              image: allPlays,
            },
            {
              title: "Creative Kinders",
              ages: "Ages 3 - 5 years",
              time: "11:00AM - 12:00PM",
              color: "#9ECC45",
              image: creativeKinders,
            },
          ]}
        />
        <PlayLabDaySchedule position={4} day="Thursday" programs={[]} />
        <PlayLabDaySchedule
          position={5}
          day="Friday"
          programs={[
            {
              title: "Little Explorers",
              ages: "Ages 1.5 - 3 years",
              time: "9:15AM - 10:15AM",
              color: "#4DC5D9",
              image: littleExplorers,
            },
            {
              title: "Creative Kinders",
              ages: "Ages 3 - 6 years",
              time: "10:45AM - 11:45AM",
              color: "#9ECC45",
              image: creativeKinders,
            },
          ]}
        />
      </div>
    </section>
  </section>
  <Image
    src={purpleWave}
    alt="blue background wave"
    class="left-0 right-0 w-screen"
  />
  <section class="relative bg-[#E7BAFF]">
    <Image
      src={graphics}
      alt="graphics"
      class="absolute right-0 top-0 z-10 hidden w-60 rotate-180 sm:block"
    />
    <div class="relative z-20 m-auto block max-w-[1380px] px-5 pt-4">
      <div class="flex items-center gap-8 py-8">
        <div class="w-full lg:w-1/2">
          <p class="mb-10 text-center font-lilita text-5xl">
            The magic of Play Lab
          </p>
          <p class="font-gotham text-lg font-light sm:text-2xl">
            Welcome to Play Lab! <span class="font-bold"
              >Child-led immersive play programs that your little one will LOVE.
            </span>
            <br /><br />
            Designed for little hands to explore freely, create joyfully, and get
            wonderfully messy! We welcome the chaos - mess, laughter, and squeals
            of delight!
            <br /><br />
            Weekly semi-structured sessions.<br />Book for the term or a casual
            session.
            <br /><br />
            <span class="font-bold italic">Explore Play Labs</span>
            <br /><br />
          </p>
          <ul class="mb-4 list-disc pl-6 text-lg sm:text-2xl">
            <li>Dry Sensory Play Stations</li>
            <li>Wet Sensory Play Stations</li>
            <li>Creative Art Stations</li>
            <li>Magnet Gravity Play Wall</li>
            <li>Sensory Swing (yes, an actual swing!)</li>
            <li>Weaving Peg Wall Station</li>
            <li>Dancing, music games & imaginative group activities!</li>
          </ul>

          <p class="mt-8 font-gotham text-lg font-light sm:text-2xl">
            With only <span class="font-bold">12 children per session,</span> our
            expertly fun facilitators guide playful, sensory-rich experiences that
            that spark creativity and connection. Join us!
          </p>
        </div>
        <Image
          src={swing}
          alt="girl on a swing"
          class="hidden w-1/2 max-w-[600px] rounded-2xl border-[12px] border-white lg:block"
        />
      </div>
    </div>
  </section>
  <Image
    src={purpleWave}
    alt="blue background wave"
    class="left-0 right-0 -mt-1 w-screen rotate-180"
  />
  <section class="m-auto block max-w-[1380px] px-5">
    <Reviews
      title="Read what parents say!"
      reviews={[
        {
          review:
            "We LOVED Play Lab! We attended the open day and loved how sensory and creative the session was. My little one is shy, but the Play Lab environment helped him come out of his shell. We truly can’t wait to come back. ",
          writtenBy: "Liz",
          writtenYear: "2025",
        },
        {
          review:
            "My daughter talks about it nonstop. She loved the experiments and came home so proud of her work. The staff are so kind and thoughtful — it felt like a second home.",
          writtenBy: "Jess",
          writtenYear: "2025",
        },
        {
          review:
            "I took my 18 month old and 4 year old and it was wonderful that they both could enjoy the space. I had a friend with me, and we chatted while the other ones explored. We will be back for sure.",
          writtenBy: "Siobhan",
          writtenYear: "2025",
        },
      ]}
    />
    <section class="mt-12 md:mt-20">
      <h6 class="mb-4 text-center font-lilita text-4xl md:text-5xl">
        Frequently Asked Questions
      </h6>
      <div class="flex w-full flex-col items-center gap-8 md:flex-row">
        <Image
          class="hidden w-2/5 md:block"
          src={faq}
          alt="Three girls smiling"
        />
        <div class="w-full md:w-3/5">
          <FaqAccordion
            client:idle
            items={[
              {
                question: "How do I book a session?",
                answer:
                  "You can book online through our website, or contact us directly and we'll help you find a time that works best for you and your child.",
              },
              {
                question: "What age group is Play Lab for?",
                answer:
                  "Play Lab is designed for children aged 1 to 5 years old. Activities are thoughtfully adapted to suit each developmental stage, so everyone can enjoy and benefit from the session — from curious toddlers to creative preschoolers.",
              },
              {
                question: "Do I stay with my child during the session?",
                answer:
                  "If your child is under 4 years old, yes. For this age group Play Lab is a caregiver-and-child program. You'll share in the fun, support their exploration, and make special memories together - without the clean-up! Children aged 4-5 years old are very welcome to attend independently, our team provides gentle guidance and lots of support throughout the session.",
              },
              {
                question: "What types of activities do you run?",
                answer:
                  "Each session includes a mix of art, science, sensory, and craft-based activities. For younger children, the focus is on exploration and play. For older children, we introduce elements of creative thinking, self-expression, and take-home projects.",
              },
              {
                question: "How long is each session?",
                answer: "Each Play Lab session runs for 60 minutes.",
              },
              {
                question:
                  "My child has special needs. Is this program appropriate?",
                answer:
                  "Absolutely. We welcome all children and are passionate about creating an inclusive, supportive environment for every child. We encourage you to call us as we'd love to chat about how we can best support your child in the Play Lab space.",
              },
            ]}
          />
        </div>
      </div>
    </section>
    <div class="mt-12 flex w-full justify-center sm:mt-6">
      <PrimaryButton
        text="Book Today"
        path="https://bookings.fizzkidz.com.au/play-lab-booking"
      />
    </div>
    <Values />
  </section>
</Layout>
