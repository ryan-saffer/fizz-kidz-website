---
import Layout from "@/layout/Layout.astro";
import { Image } from "astro:assets";
import banngerGirl from "@/assets/images/pages/home/banner-girl.png";
import CardWithImage from "@/components/card-with-image.astro";

import parties from "@/assets/images/pages/home/parties.jpg";
import activations from "@/assets/images/pages/home/activations.jpg";
import afterSchool from "@/assets/images/pages/home/after-school.jpg";
import holidayPrograms from "@/assets/images/pages/home/holiday-programs.jpg";
import incursions from "@/assets/images/pages/home/incursions.jpg";
import energy from "@/assets/images/pages/franchising/energy.jpg";
import { ChevronRight } from "lucide-react";
import studio from "@/assets/images/pages/home/studio.png";
import fizzFansBgTop from "@/assets/images/pages/home/fizz-fans-bg-top.svg";
import fizzFansBgBottom from "@/assets/images/pages/home/fizz-fans-bg-bottom.svg";
import star from "@/assets/images/pages/home/star.svg";
// import franchising from "@/assets/images/pages/home/franchising.png";

import location1 from "@/assets/images/pages/home/location-icon-1.svg";
import location2 from "@/assets/images/pages/home/location-icon-2.svg";
import location3 from "@/assets/images/pages/home/location-icon-3.svg";
import location4 from "@/assets/images/pages/home/location-icon-4.svg";
import PartyThemes from "@/components/party-themes.astro";
import ReviewsCarousel from "@/components/react/reviews-carousel";

import graphics1 from "@/assets/svg/atom.svg";
import graphics3 from "@/assets/svg/dots.svg";
import graphics4 from "@/assets/svg/green-science.svg";
import graphics5 from "@/assets/svg/shapes.svg";
import graphics6 from "@/assets/svg/slime-purple.svg";
import graphics7 from "@/assets/svg/yellow-swirl.svg";
import headerBottom from "@/assets/images/pages/home/header-bottom.svg";
import headerBottomInverted from "@/assets/images/pages/home/header-bottom-inverted.svg";
import InstagramGrid from "@/components/instagram-grid.astro";
import PrimaryButton from "@/components/primary-button.astro";
import Values from "@/components/values.astro";
import MailingList from "@/components/mailing-list.astro";
import SlimeLab from "@/components/slime-lab.astro";

const locations = [
  {
    icon: location1,
    location: "Balwyn",
  },
  {
    icon: location2,
    location: "Cheltenham",
  },
  {
    icon: location3,
    location: "Essendon",
  },
  {
    icon: location4,
    location: "Malvern",
  },
] as const;

const services = [
  {
    title: "Birthday Parties",
    subtitle:
      "Filled with high-energy, hands-on activities, our parties are known and loved by kids!",
    image: parties,
    imageAlt: "Kid smiling in front of a birthda cake",
    color: "#F24DA1",
    path: "/birthday-parties/",
  },
  {
    title: "Holiday Programs",
    subtitle:
      "With a new and exciting timetable each holiday period, school holidays are buzzing with fun!",
    image: holidayPrograms,
    imageAlt: "A child holding a bath bomb and smiling at the camera",
    color: "#A7CB5B",
    path: "/holiday-programs/",
  },
  {
    title: "After-School Programs",
    subtitle:
      "Run in schools and at Fizz Kidz studios, children explore the fascinating world of science!",
    image: afterSchool,
    imageAlt: "Children at school gathered and working together",
    color: "#9044E2",
    path: "/after-school-programs/",
  },
  {
    title: "Activations & Events",
    subtitle:
      "We are experts in kids entertainment! Fizz Kidz will bring your next activation, event or workshop to life.",
    image: activations,
    imageAlt: "Kids playing with slime at a shopping center",
    color: "#42D4F3",
    path: "/activations-and-events/",
  },
  {
    title: "School Incursions",
    subtitle:
      "We engage your students in the fascinating nature of everyday science, and we do it by exploring hands-on science experiments!",
    image: incursions,
    imageAlt: "A child at school smiling and pouring something into a bottle",
    color: "#A7CB5B",
    path: "/in-schools/incursions/",
  },
  {
    title: "Our Locations",
    subtitle:
      "Our Fizz Kidz studios are buzzing with fun! Find the closest Fizz Kidz studio to you.",
    image: energy,
    imageAlt: "Fizz Kids staff leading a room full of children",
    color: "#F24DA1",
    path: "/locations/",
  },
] as const;
---

<Layout
  title="Fizz Kidz: Kids Party, Programs & Events Specialist in Melbourne"
  description="Fizz Kidz offers unique and fun holiday programs, after school programs, activations, events and kids birthday parties in Melbourne."
>
  <main>
    <section class="relative h-[700px] min-[450px]:h-[600px]">
      <div class="relative z-40 h-full bg-[#56C6D1]">
        <Image
          loading="eager"
          src={graphics1}
          alt="icon"
          width={200}
          class="absolute left-0 top-8 hidden h-24 min-[1000px]:block"
        />
        <Image
          loading="eager"
          src={graphics3}
          alt="icon"
          width={200}
          class="absolute left-0 right-0 top-8 m-auto h-40 sm:h-96"
        />
        <Image
          loading="eager"
          src={graphics5}
          alt="icon"
          widths={[50, 100, 200]}
          sizes="(min-width: 250px) 50, (min-width: 350px) 100, (min-width: 450px) 200"
          class="absolute bottom-8 left-0 h-80 w-96 object-cover"
        />
        <Image
          loading="eager"
          src={graphics4}
          alt="icon"
          width={200}
          class="absolute bottom-2 right-8 h-40 rotate-12"
        />
        <Image
          loading="eager"
          src={graphics7}
          alt="icon"
          width={200}
          class="absolute bottom-0 left-0 right-0 m-auto hidden h-60 lg:block"
        />
        <Image
          loading="eager"
          src={graphics6}
          alt="icon"
          class="absolute right-0 m-auto w-80 sm:w-[600px]"
        />
      </div>
      <div
        class="absolute left-0 right-0 top-0 m-auto flex h-full w-full flex-col justify-between min-[1000px]:flex-row min-[1000px]:items-center min-[1150px]:max-w-[90rem] min-[1150px]:flex-row"
      >
        <div
          class="z-50 mt-8 max-w-[29rem] px-4 min-[1000px]:w-[31rem] min-[1000px]:max-w-[31rem] min-[1000px]:pl-12 min-[1150px]:mt-0 min-[1150px]:w-[39rem] min-[1150px]:max-w-[39rem]"
        >
          <p
            class="min-[460px]:leading[1.4] whitespace-nowrap text-justify font-lilita text-5xl leading-[1.4] text-white [text-align-last:justify] min-[380px]:text-6xl min-[380px]:leading-[1.4] min-[460px]:text-7xl min-[1150px]:text-8xl"
          >
            We make kids
          </p>
          <div class="text-justify leading-[1]">
            <span
              class="font-lilita text-8xl uppercase leading-[0.6] text-white min-[460px]:text-9xl min-[1150px]:text-[10rem] min-[1150px]:leading-[0.8]"
              >S</span
            >
            <span
              class="font-lilita text-8xl uppercase leading-[0.6] text-white min-[460px]:text-9xl min-[1150px]:text-[10rem] min-[1150px]:leading-[0.8]"
              >m</span
            >
            <span
              class="font-lilita text-8xl uppercase leading-[0.6] text-white min-[460px]:text-9xl min-[1150px]:text-[10rem] min-[1150px]:leading-[0.8]"
              >i</span
            >
            <span
              class="font-lilita text-8xl uppercase leading-[0.6] text-white min-[460px]:text-9xl min-[1150px]:text-[10rem] min-[1150px]:leading-[0.8]"
              >l</span
            >
            <span
              class="font-lilita text-8xl uppercase leading-[0.6] text-white min-[460px]:text-9xl min-[1150px]:text-[10rem] min-[1150px]:leading-[0.8]"
              >e</span
            >
            <span class="inline-block h-0 w-full"></span>
          </div>
          <p
            class="leading-1 font-lilita text-2xl text-white min-[1150px]:text-4xl"
          >
            Birthday Parties, Holiday Programs, After School Programs and more!
          </p>
          <PrimaryButton
            text="Book a Party"
            path="/birthday-parties/book-a-party/"
            className="mt-8"
          />
        </div>
        <div class="relative h-full min-[1000px]:w-1/2">
          <Image
            loading="eager"
            widths={[400, 530, 650]}
            sizes="(max-width: 800px) 400px, (max-width: 800px) 530px, (max-width:1000px) 650px"
            class="absolute bottom-0 right-0 z-40 h-[340px] w-auto object-cover min-[460px]:h-[300px] min-[750px]:h-[400px] min-[1000px]:h-[500px]"
            src={banngerGirl}
            alt="A girl smiling and holding a green bubbling volcano"
          />
        </div>
      </div>
      <div
        class="absolute bottom-6 w-full min-[350px]:bottom-8 min-[520px]:bottom-12 min-[680px]:bottom-16 min-[1020px]:bottom-24 min-[1380px]:bottom-32"
      >
        <Image
          loading="eager"
          class="absolute top-0 z-20 w-full rotate-180"
          src={headerBottom}
          alt="blue background wave"
        />
        <Image
          loading="eager"
          class="absolute top-0 z-40 w-full rotate-180"
          src={headerBottomInverted}
          alt="white backround"
        />
      </div>
    </section>
    <section class="m-auto block max-w-[1380px] px-5">
      <p
        class="relative z-[80] my-8 text-center font-lilita text-5xl text-[#9044E2] md:text-7xl"
      >
        Fizzing, Fantastic, Fun awaits!
      </p>
      <h1 class="m-auto max-w-4xl text-center font-gotham text-xl md:text-2xl">
        Fizz Kidz offer the most exciting holiday programs, after-school
        programs and kids birthday parties in Melbourne
      </h1>
      <div class="my-12 grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {
          services.map((service, idx) => (
            // only first three images above the fold
            <a href={service.path}>
              <CardWithImage
                eager={idx < 3}
                image={service.image}
                imageAlt={service.imageAlt}
                className="cursor-pointer group flex flex-col h-full"
              >
                <div
                  slot="content"
                  class="flex flex-grow flex-col justify-between p-8 group-hover:bg-gray-50"
                >
                  <div>
                    <h4
                      class="mb-2 font-lilita text-2xl uppercase"
                      style={{ color: service.color }}
                    >
                      {service.title}
                    </h4>
                    <p class="font-gotham text-xl">{service.subtitle}</p>
                  </div>
                  <div class="mt-4 flex items-center gap-4">
                    <p
                      class="font-semibold uppercase"
                      style={{ color: service.color }}
                    >
                      Learn More
                    </p>
                    <ChevronRight className="h-4 w-4" color={service.color} />
                  </div>
                </div>
              </CardWithImage>
            </a>
          ))
        }
      </div>
    </section>
    <section class="m-auto mt-12 block max-w-[1380px] px-5">
      <PartyThemes />
    </section>
    <SlimeLab />
    <div
      class="m-auto flex w-full max-w-[1300px] justify-between gap-8 px-12 md:gap-24"
    >
      <Image
        class="w-8 md:w-16"
        width="100"
        src={graphics1}
        alt="science graphic"
      />
      <Image
        class="w-8 md:w-16"
        width="100"
        src={graphics3}
        alt="science graphic"
      />
      <Image
        class="w-8 md:w-16"
        width="50"
        src={graphics4}
        alt="science graphic"
      />
    </div>
    <section>
      <Image
        class="min-h-96 w-full object-cover"
        src={studio}
        alt="The Essendon studio"
        height={1200}
      />
      <div class="m-auto block max-w-[1380px] px-5 pt-8">
        <h3 class="my-8 text-center font-lilita text-5xl">Our Studios</h3>
        <h4 class="m-auto max-w-4xl text-center font-gotham text-2xl">
          The heart of Fizz Kidz are our Studios. Fizz Kidz studios are
          captivating, welcoming,and glowing with excitement!
        </h4>
        <div
          class="m-auto my-16 grid w-max max-w-4xl grid-cols-2 gap-12 min-[900px]:grid-cols-4"
        >
          {
            locations.map((location) => (
              <div class="flex flex-col items-center justify-center gap-4">
                <Image
                  src={location.icon}
                  alt="icon"
                  class="h-12 min-[400px]:h-16 sm:h-24"
                />
                <p class="font-lilita text-xl uppercase min-[400px]:text-2xl sm:text-3xl">
                  {location.location}
                </p>
              </div>
            ))
          }
        </div>
      </div>
    </section>
    <section>
      <Image class="w-full" src={fizzFansBgTop} alt="background of green" />
      <div class="bg-[#D6EAB5]">
        <div class="m-auto block max-w-[1380px] px-5 pt-8">
          <p class="mb-4 text-center font-lilita text-5xl">Fizz Fans</p>
          <p class="m-auto max-w-5xl text-center font-gotham text-2xl">
            We've hosted over <strong>50,000 parties and events</strong> and are
            incredibly good at what we do.
          </p>
          <div
            class="my-8 flex w-full flex-col items-center justify-center gap-8 md:flex-row"
          >
            <div class="flex gap-2">
              {
                [1, 2, 3, 4, 5].map(() => (
                  <Image src={star} alt="star" class="h-12 w-12" />
                ))
              }
            </div>
            <p class="text-center font-gotham text-4xl font-thin">
              Thousands of 5 Star Reviews
            </p>
          </div>
          <ReviewsCarousel
            client:visible
            reviews={[
              {
                review:
                  "We had my daughters party yesterday and the hosts were amazing. I got to sit back and relax and they ran the party for us. The kids had a ball. They were so good with the kids. 10/10 Thank you for making my daughters birthday so special.",
                writtenBy: "Violeta",
                writtenYear: "2023",
              },
              {
                review:
                  " My son had the most amazing birthday party at Fizz Kids and it exceeded my expectations by a long shot. Not only did the kids get to make fun and messy creations but the party hosts were sensational. They were so engaging with the kids and kept them involved the entire time, playing games in between each activity which the kids loved. The food package was very generous with lots of options to choose from. All the parents that attended with their kids were very impressed with they way it was run and how great the hosts were with the kids - aged 4-5.  Special thank you to Paddy, who without missing a beat cleaned up my sons 'power spew' as well.  I cannot recommend this party venue enough ðŸ˜Š",
                writtenBy: "Robin",
                writtenYear: "2023",
              },
              {
                review:
                  "Such an easy process, From booking through to the day, clear information and all done online. Pace of the party was great, the kids loved it. Lots of food and staff were really lovely, accommodating, enthusiastic and engaging with the kids. We had 14 kids plus parents and the space was big enough for that number plus parents. 5th birthday party for 1.5 hours was perfect, with a few younger siblings and the younger ones were entertained as well. Great option to outsource a party that is value for money. Would highly recommended!",
                writtenBy: "Siobhan",
                writtenYear: "2023",
              },
              {
                review:
                  " We just hosted our daughter's birthday party at Fizz Kids Essendon and boy was it a hit!! The booking/organising of the function is so easy and really detailed. The party itself was wonderful, our hosts were so helpful and kept all the children happy and entertained! They were so excited and engaged with the experiences too. Highly recommend Fizz Kids Essendon and look forward to coming back for holiday club!!",
                writtenBy: "Dee",
                writtenYear: "2023",
              },
              {
                review:
                  "We had my daughter's 9th birthday at Fizz Kidz Essendon and I have only great things to say about the experience. Great activities, helpful and engaging staff, well considered schedule (having kids decorate their own bags at the start is a great idea!), and a really fun vibe. It was such a relief to just hand everything over for a change!",
                writtenBy: "Chelsea",
                writtenYear: "2024",
              },
            ]}
          />
        </div>
        <div class="h-1">
          <!-- for some reason this stops a gap appearing (???) -->
        </div>
      </div>
      <Image src={fizzFansBgBottom} alt="background of green" class="w-full" />
    </section>
    <section class="m-auto block max-w-[1380px] px-5 pt-8">
      <p class="mb-4 text-center font-lilita text-5xl">
        We're social - join us!
      </p>
      <p class="mb-8 text-center font-lilita text-4xl">
        Follow us on <a
          href="https://www.instagram.com/fizzkidzz/"
          target="_blank"
          class="bg-gradient-to-r from-[#833ab4] via-[#fd1d1d] to-[#fcb045] bg-clip-text text-transparent"
          >instagram</a
        >
      </p>
      <InstagramGrid />
    </section>
    <!-- <section class="m-auto my-12 block max-w-[1380px] px-5 pt-8 md:my-24">
      <div class="flex flex-col items-center justify-center gap-8 md:flex-row">
        <div class="flex flex-col gap-12 md:w-1/2">
          <h6 class="font-lilita text-5xl">Own a Franchise</h6>
          <p>
            When you become a franchisee, you're not just starting a business;
            you're joining a caring and thriving family that prioritises
            everyone's success. We're looking for partners who share in our
            values and are passionate about empowering and entertaining
            children!
          </p>
          <PrimaryButton
            text="Let's Chat"
            path="/franchising/"
            className="w-fit"
          />
        </div>
        <Image
          class="md:w-1/2"
          src={franchising}
          alt="Fizz Kidz staff smiling and making slime"
        />
      </div>
    </section> -->
  </main>
  <Values />
  <MailingList />
</Layout>
